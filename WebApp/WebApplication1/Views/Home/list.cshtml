
@{
    Layout = null;
    if (ViewBag.message != null && ViewBag.message.StartsWith("redirect"))
    { 
       Response.Redirect(Url.Action("getListings", "Home", "ROOT"), false);
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Upload Certificate</title>
</head>
<body>
    <h2>Upload the User Client Certificate File please</h2>
    @using (Html.BeginForm("list",
                        "Home",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
    {
        <label for="file">Upload Image:</label>
        <input type="file" name="file" id="file" /><br><br>
        <input type="text" name="certpassword" placeholder="Certificate Store Password" /><br />
        <input type="text" name="h" placeholder="Host" /><br />
        <input type="text" name="port" placeholder="Port" /><br />
        <input type="text" name="user" placeholder="Username" /><br />
        <input type="text" name="pass" placeholder="Password" /><br />
        <input type="submit" value="Go" />
        <br><br>
        @ViewBag.Message
    }
</body>
</html>
